<div>
	<form action="/item_taxes/list" method="post">
	<% if @items.empty?  %>
		<p>No items Available</p>
	<%else%>
		<table border="1" width="100%">
			<thead><tr>
				<th>S.no</th>
				<th>Item Category Name</th>
				<th><input type="checkbox" id="checkAll" name="checkAll">Item Name</th>
				<th>Item Price</th>
				<th>Action</th>
				<th>Action</th>
			</tr></thead>
			<tbody>
				<% @items.each_with_index do |item,index| %>
				<tr>
				<input type="hidden" id="item_id" name="item_id" value="<%=item.id%>">
				<td><%=index+1%></td>
				<td><%=item.item_category.name rescue nil%></td>
				<td id="checkValue"><input type="checkbox" id="checkItem" name="selected_item_ids[]" value="<%=item.id%>"/><%=item.name rescue nil%></td>
				<td><%=item.rate rescue nil%></td>
				<td><%= link_to "View Tax", item_path(item),target: "_blank"%></td>
				<td><a href='<%= edit_item_path(item.id)%>'>Edit</a> | <%= link_to "Delete", item_path(item.id), method: :delete,data: { confirm:"Are you sure delete the tax details?" } %> </td>
				</tr>
				<% end %>
			</tbody>
			</tr>
		</table>
		<%= submit_tag 'Find Total Amount',style: "margin: 10px;margin-left: 535px;" %>
	<% end %>
	</form>
</div>

<script type="text/javascript">
$('#checkAll').click(function () {    
       $('input:checkbox').prop('checked', this.checked);   
   });

</script>

